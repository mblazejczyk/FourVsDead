<Window x:Class="RedlabsUpdateUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RedlabsUpdateUtility"
        mc:Ignorable="d"
		ContentRendered="Window_ContentRendered"
        Title="Four VS dead - launcher" Height="438" Width="751" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" HorizontalAlignment="Center" VerticalAlignment="Center" WindowStyle="ToolWindow">
	<Grid Background="#FFC3C3C3" HorizontalAlignment="Center" VerticalAlignment="Center">
		<TextBlock Name="TitleBlock" Text="Verifying game files... Please wait" Margin="10,0,0,48" TextWrapping="Wrap" Width="354" Height="16" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
		<ProgressBar Name="ProgressBar" Height="20" Margin="10,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="674"/>
		<WebBrowser Height="332" Margin="10,10,10,80" Source="https://yellowsink.pl/fourvsdead/" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		<Button x:Name="PlayButton" Content="Play" Margin="0,0,10,10" IsEnabled="False" Click="PlayButton_Click_1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="52"/>
	</Grid>
</Window>
